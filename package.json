{
  "name": "hitback-backend",
  "version": "2.0.0",
  "description": "HITBACK Game Backend - Music Quiz API with Local Audio Support",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "test": "jest --coverage",
    "test:watch": "jest --watch",
    "test:unit": "jest --testPathPattern=unit",
    "test:integration": "jest --testPathPattern=integration",
    "setup": "node scripts/setup.js",
    "setup:audio": "node scripts/setup-audio.js",
    "health": "curl http://localhost:3000/api/health",
    "validate": "node scripts/validate-setup.js",
    "logs": "tail -f logs/hitback.log",
    "clean": "rm -rf logs/* backups/* && echo 'Cleaned logs and backups'",
    "backup": "node scripts/backup-data.js",
    "lint": "eslint src/ --ext .js",
    "lint:fix": "eslint src/ --ext .js --fix",
    "format": "prettier --write 'src/**/*.js'",
    "docs": "node scripts/generate-docs.js",
    "migrate": "node scripts/migrate-tracks.js"
  },
  "keywords": [
    "music",
    "quiz",
    "game",
    "qr-code",
    "audio",
    "local",
    "express",
    "api"
  ],
  "author": "HITBACK Team",
  "license": "MIT",
  "engines": {
    "node": ">=14.0.0",
    "npm": ">=6.0.0"
  },
  "dependencies": {
    "axios": "^1.13.2",
    "cors": "^2.8.5",
    "dotenv": "^17.2.1",
    "express": "^4.21.2",
    "express-rate-limit": "^7.5.1",
    "helmet": "^7.2.0",
    "morgan": "^1.10.1",
    "pg": "^8.16.3",
    "uuid": "^9.0.1"
  },
  "devDependencies": {
    "@types/jest": "^29.5.8",
    "eslint": "^8.57.0",
    "jest": "^29.7.0",
    "nodemon": "^3.0.2",
    "prettier": "^3.1.0",
    "supertest": "^6.3.3"
  },
  "jest": {
    "testEnvironment": "node",
    "coverageDirectory": "coverage",
    "collectCoverageFrom": [
      "src/**/*.js",
      "!src/**/*.test.js",
      "!src/tests/**",
      "!server.js"
    ],
    "testMatch": [
      "**/__tests__/**/*.js",
      "**/?(*.)+(spec|test).js"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 70,
        "functions": 70,
        "lines": 70,
        "statements": 70
      }
    }
  },
  "eslintConfig": {
    "env": {
      "node": true,
      "es2021": true,
      "jest": true
    },
    "extends": [
      "eslint:recommended"
    ],
    "parserOptions": {
      "ecmaVersion": 12,
      "sourceType": "module"
    },
    "rules": {
      "no-unused-vars": "warn",
      "no-console": "off",
      "prefer-const": "error",
      "no-var": "error"
    }
  },
  "prettier": {
    "semi": true,
    "trailingComma": "es5",
    "singleQuote": true,
    "printWidth": 100,
    "tabWidth": 2
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/hitback-team/hitback-backend.git"
  },
  "bugs": {
    "url": "https://github.com/hitback-team/hitback-backend/issues"
  },
  "homepage": "https://github.com/hitback-team/hitback-backend#readme"
}
